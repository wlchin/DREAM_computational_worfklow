rule extract_CD8_TEM:
    input:
        'data/dream.h5ad'
    output:
        "data/CD8TEM.h5ad",
        "data/metadata_CD8TEM.csv"
    singularity:
        "docker://wlc27/dream_computational_workflow_python_container:v1"
    script:
        "scripts/extract_CD8TEM.py"

